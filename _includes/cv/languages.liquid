{% comment %}
  Languages renderer - Two column grid layout
{% endcomment %}

<div class="row cv-grid">
  {% for entry in entries %}
    <div class="col-6">
      <div class="cv-grid-item">
        {% capture lang_name %}{% if entry.name %}{{ entry.name }}{% elsif entry.language %}{{ entry.language }}{% endif %}{% endcapture %}
        {% capture fluency %}{% if entry.summary %}{{ entry.summary }}{% elsif entry.fluency %}{{ entry.fluency }}{% endif %}{% endcapture %}
        <div class="cv-grid-title">{{ lang_name | strip }}</div>
        <div class="cv-grid-content">{{ fluency | strip }}</div>
      </div>
    </div>
  {% endfor %}
</div>
