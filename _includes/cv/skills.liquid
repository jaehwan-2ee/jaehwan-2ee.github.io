{% comment %}
  Unified skills entry renderer for both RenderCV and JSONResume formats
  Supports both naming conventions:
  - RenderCV: label, details (string)
  - JSONResume: name, keywords (list or string)
{% endcomment %}

<div class="card-text font-weight-light">
  {% for entry in entries %}
    <div class="skill-item">
      {% if entry.icon %}
        <i class="{{ entry.icon }}"></i>
      {% endif %}

      {% comment %} Support both label (RenderCV) and name (JSONResume) {% endcomment %}
      {% capture skill_name %}
        {% if entry.label %}{{ entry.label }}{% elsif entry.name %}{{ entry.name }}{% endif %}
      {% endcapture %}

      <strong>
        {{- skill_name | strip -}}
        {%- if entry.level %} ({{ entry.level }}){% endif %}:</strong
      >

      {% comment %} Support details (RenderCV) and keywords (JSONResume - list or string) {% endcomment %}
      {% if entry.details %}
        {{ entry.details }}
      {% elsif entry.keywords %}
        {% if entry.keywords.first %}
          {% comment %} keywords is a list {% endcomment %}
          {% for keyword in entry.keywords %}
            {% if forloop.last %}
              {{ keyword }}
            {% else %}
              {{ keyword }},
            {% endif %}
          {% endfor %}
        {% else %}
          {% comment %} keywords is a string {% endcomment %}
          {{ entry.keywords }}
        {% endif %}
      {% endif %}
    </div>
  {% endfor %}
</div>

<style>
  .skill-item {
    padding: 0.5rem 0;
  }
</style>
